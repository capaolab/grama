model Client {
  id         Int          @id @default(autoincrement())
  name       String
  cpf_cnpj   String?      @unique
  status     ClientStatus @default(ACTIVE)
  type       ClientType   @default(INDIVIDUAL)
  addess     String
  city       String
  state      String
  zipCode    String
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  // Relations
  tasks   Task[]
  sales   Sale[]
}

enum ClientStatus {
  ACTIVE
  INACTIVE
  BLOCKED
}

enum ClientType {
  INDIVIDUAL
  COMPANY
}

enum ClientPosition {
  OWNER
  MANAGER
  EMPLOYEE
}