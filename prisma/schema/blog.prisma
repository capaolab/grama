model Post {
  id          String    @id @default(uuid())
  title       String
  content     String    @db.Text
  slug        String    @unique
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tags        Tag[]

  // Relations with User
  author      User      @relation("UserPosts", fields: [authorId], references: [id])
  authorId    String
}

model Tag {
  id          String    @id @default(uuid())
  name        String    @unique
  posts       Post[]
}